root = true

# =========================
# 공통 설정 (모든 파일)
# =========================
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# =========================
# Java
# =========================
[*.java]
ij_continuation_indent_size = 8

# Wildcard import 방지
ij_java_class_count_to_use_import_on_demand = 999
ij_java_names_count_to_use_import_on_demand = 999

# Static wildcard import 금지
ij_java_packages_to_use_import_on_demand =

# Import 순서
ij_java_imports_layout = java.**,|,javax.**,|,jakarta.**,|,org.**,|,com.**,|,*,|,$*

# =========================
# Spring 설정 파일들
# =========================
[*.{yml,yaml}]
indent_size = 2

[*.xml]
indent_size = 2

[*.json]
indent_size = 2

# =========================
# Markdown
# =========================
[*.md]
trim_trailing_whitespace = false   # md에서는 줄 끝 공백 허용

# =========================
# Shell Script
# =========================
[*.sh]
end_of_line = lf
indent_size = 2
